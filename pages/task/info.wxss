
page {
  background: #efeff4;
}
.super {
  height: 10rpx;
  vertical-align: super;
  margin-left: -8rpx;
}
.article-meta {
  padding: 20rpx 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  color: gray;
}
.article-text {
  font-size: 26rpx;
  line-height: 50rpx;
  margin: 0 20rpx;
}
.article-author,
.article-time {
  font-size: 30rpx;
}
.article-content {
  padding: 0 30rpx;
  overflow: hidden;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.uni-column {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-bottom: 100rpx;
}
image,
._video {
  width: 100%;
  margin: 0 auto 20rpx auto;
}
image {
  height: auto;
}
.title_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 70rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin-top: 20rpx;
}
.comment_list_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 650rpx;
}
.comment_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 720rpx;
  margin: 0 auto;
  margin-top: 16rpx;
  min-height: 0;
  overflow: hidden;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx dashed #f1f1f1;
}
.comment_avatar {
  width: 90rpx;
  height: 90rpx;
}
.comment_avatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.avatar_button {
  background: none;
  border: none;
  padding: 1rpx 5rpx 1rpx 1rpx;
  margin: 1rpx 5rpx 0rpx 5rpx;
}
.avatar_button::after {
  border: none;
  outline: none;
}
.comment_total_box {
  width: 610rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.comment_content_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  width: 100%;
  margin-bottom: 15rpx;
}
.comment_meta {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 8rpx;
  height: 38rpx;
}
.comment_nickname {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-right: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #3f9f94;
}
.commnet_date {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #8e8e8e;
}
.comment_zan {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comment_zan image {
  width: 35rpx;
  height: 35rpx;
}
.comment_zan_num {
  color: #425888;
  font-size: 24rpx;
  height: 35rpx;
  line-height: 35rpx;
}
.comment_content {
  width: 100%;
  color: #6f6f6f;
}
.add_btn {
  width: 100%;
  height: 7%;
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  bottom: 5rpx;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.btn {
  width: 40%;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.grace-mask {
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
.grace-banner {
  width: 70%;
  position: fixed;
  left: 50%;
  top: 50%;
  background: #FFF;
  border-radius: 10rpx;
  z-index: 2;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}